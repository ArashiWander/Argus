# Backend Environment Variables
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Protocol Configuration
# HTTP Protocol (default enabled)
HTTP_ENABLED=true
HTTP_PORT=3001

# gRPC Protocol (disabled by default)
GRPC_ENABLED=false
GRPC_PORT=50051
GRPC_TLS_ENABLED=false

# MQTT Protocol (disabled by default)
MQTT_ENABLED=false
MQTT_BROKER_URL=mqtt://localhost:1883

# Kafka Protocol (disabled by default)
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=argus-server

# Database connections (optional - fallback to in-memory storage if not provided)
# InfluxDB for time-series metrics data
# INFLUXDB_URL=http://localhost:8086
# INFLUXDB_TOKEN=your-influxdb-token
# INFLUXDB_ORG=argus
# INFLUXDB_BUCKET=metrics

# Elasticsearch for logs and search
# ELASTICSEARCH_URL=http://localhost:9200
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=your-password

# PostgreSQL for metadata and configuration
# DATABASE_URL=postgresql://postgres:password@localhost:5432/argus

# Redis for caching and session management
# REDIS_URL=redis://localhost:6379